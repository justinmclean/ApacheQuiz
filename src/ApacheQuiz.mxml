            </js:beads>
            <js:Container id="startPage" visible="true">
                <js:beads>
                    <js:VerticalLayoutWithPaddingAndGap gap="20" />
                </js:beads>
                <js:style>
                    <js:SimpleCSSStyles padding="20" />
                </js:style>
                <js:Image src="logos/asf_logo.png" height="175" width="429" />
