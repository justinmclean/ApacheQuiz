                        <js:CheckBox id="answer3" width="100%" />
                        <js:MultilineLabel id="hint3" width="100%" />
                    </js:Container>
                    <js:Container>
                        <js:beads>
                           <js:VerticalLayoutWithPaddingAndGap gap="5" />
                        </js:beads>
                        <js:CheckBox id="answer4" width="100%" />
                        <js:MultilineLabel id="hint4" width="100%" />
                    </js:Container>
                    <js:Container>
                        <js:beads>
